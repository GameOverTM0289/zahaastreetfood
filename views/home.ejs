<%- include('partials/header') %>
<title><%= __('HOME_PAGE_TITLE') %></title>

<main class="home-page" role="main">
  <!-- 1) Hero Section -->
  <section class="hero-section" role="region" aria-labelledby="hero-headline">
    <div class="hero-image">
      <div class="hero-content">
        <h1 id="hero-headline"><%= __('HOME_HERO_HEADLINE') %></h1>
  
        <p class="hero-subheadline"><%= __('HOME_HERO_SUBHEADLINE') %></p>
  
        <!-- CTA Buttons -->
        <div class="hero-cta-buttons">
          <a class="cta-button cta-button--primary" href="#delivery-title">
            <%= __('HOME_HERO_CTA_DELIVER') %>
          </a>
          <a class="cta-button cta-button--secondary" href="/menu">
            <%= __('HOME_HERO_CTA_MENU') %>
            <ion-icon name="book-outline"></ion-icon>
          </a>
        </div>
      </div>
    </div>
  </section>
  
  

  <!-- 2) Partner section -->
  <section class="partner-section">
    <div class="container">
      <h2 class="heading-featured-in">Partner with</h2>
      <div class="logos">
        <img src="images/wolt.png" alt="Wolt logo" />
        <img src="images/baboon.png" alt=" Baboon logo" />
      </div>
    </div>
  </section>

  <!-- 3) Tagline & Neon Quotes -->
  <section
  class="tagline-section"
  role="region"
  aria-labelledby="tagline-title"
>
  <!-- Neon Image -->
  <figure class="neon-image neon-image-1">
    <img
      src="/images/neon1.jpeg"
      alt="Neon sign: WRAPS LAUGHS, AND NO TIME FOR HALFS!"
    />
  </figure>

  <!-- Tagline Text Content -->
  <div class="tagline-content">
    <h2 id="tagline-title" class="tagline-quote tagline-1">
      <%= __('HOME_TAGLINE_TITLE') %>
    </h2>

    <p class="tagline-supporting-text">
      <%= __('HOME_TAGLINE_SUPPORT') %>
    </p>
  </div>
</section>


  <!-- 4) Tasty & Fresh -->
  <section class="tasty-fresh" role="region" aria-labelledby="tasty-title">
    <h2 id="tasty-title"><%= __('TASTY_TITLE') %></h2>
    <div class="tasty-pics">
      <img
        src="/images/fresh-bites.jpeg"
        alt="Crispy bites in a branded box"
      />
      <img
        src="/images/fresh-bites-2.jpeg"
        alt="Crispy bites in a branded box"
      />
      <img
        src="/images/fresh-bites-3.jpeg"
        alt="Crispy bites in a branded box"
      />
      <img
        src="/images/fresh-bites-4.jpeg"
        alt="Crispy bites in a branded box"
      />
  </div>
      <p><%- __("TASTY_DESC").replace("{strong}", "<strong>").replace("{/strong}", "</strong>") %></p>

    <ul class="fresh-highlights">
      <li>
        <span style="font-weight: 700"><%= __('HIGHLIGHT_TITLE-3') %></span
        ><br />
        <%= __('HIGHLIGHT_DESC-3') %>
      </li>
      <li>
        <span style="font-weight: 700"><%= __('HIGHLIGHT_TITLE-1') %></span
        ><br /><%= __('HIGHLIGHT_DESC-1') %>
      </li>
      <li>
        <span style="font-weight: 700"><%= __('HIGHLIGHT_TITLE-2') %></span
        ><br />
        <%= __('HIGHLIGHT_DESC-2') %>
      </li>
    </ul>


  </section>

  <!-- 5) About ZAHAA (Teaser) -->
  <section
  class="about-teaser"
  role="region"
  aria-labelledby="about-teaser-title"
>
  <!-- About Text Content -->
  <div class="about-content">
    <h2 id="about-teaser-title"><%= __('ABOUT_TITLE') %></h2>
    <p>
      <!-- Example usage of placeholders with strong tags -->
      <%- __("ABOUT_DESC").replace("{strong}", "<strong>").replace("{/strong}", "</strong>") %>
    </p>
    <a class="about-button" href="/about">
      <%- __("ABOUT_BUTTON") %>
    </a>
  </div>

  <!-- About Image -->
  <figure class="about-image">
    <img
      src="/images/about.jpeg"
      alt="Interior design with green leaves and modern lighting"
    />
  </figure>
</section>


  <!-- 6) Featured Menu Items (Sneak Peek) -->
  <section
    id="featured-menu"
    class="featured-menu"
    role="region"
    aria-labelledby="featured-menu-title"
  >
    <h2 id="featured-menu-title"><%- __("FEATURED_MENU_TITLE")%></h2>
    <!-- <figure class="featured-image">
      <img
        src="/images/sandwich-zahaa.jpeg"
        alt="Close-up sandwich in front of a ZAHAA sign"
      />
    </figure> -->

    <!-- Example item highlights -->
    <div class="featured-items-grid">
      <a style="text-decoration: none;" href="/menu" class="href">
      <article class="featured-item">
        
        <img
        src="/images/zahaa-burger.png"
        alt="zahaa burger"
      />
        <h3>ZAHAA Burger</h3>
        <p>
          <%- __("FEATURED__ITEM_1")%>

        </p>
      </article></a>

      <a style="text-decoration: none;" href="/menu" class="href">

      <article class="featured-item">
        <img
        src="/images/aspasia-bowl.png"
        alt="aspasia bowl"
      />
        <h3>Aspasia Bowl</h3>
        <p>
          <%- __("FEATURED__ITEM_2")%>

        </p>
      </article></a>

      <a style="text-decoration: none;" href="/menu" class="href">

      <article class="featured-item">
        <img
        src="/images/ramses-tortilla.png"
        alt="ramses wrap"
      />
        <h3>Ramses Wrap</h3>
        <p>
          <%- __("FEATURED__ITEM_3")%>

        </p>
      </article>
      </a>
    </div>

    <p class="featured-menu-note">
      <%- __("FEATURED__NOTE").replace("{span}", "<span>").replace("{/span}", "</span>") %>

      
    </p>

    <a class="cta-button" href="/menu">
      <%- __("VIEW_MENU_BUTTON")%>
    </a>

    
  </section>

  <!-- 7) Best Pick – Our Suflaki -->
  <section class="best-pick" role="region" aria-labelledby="best-pick-title">
    <h2 id="best-pick-title"><%- __("BEST_PICK_TITLE")%></h2>
    <p>
      <%- __("BEST_PICK_DESC")%>



    </p>

    <figure class="best-pick-image">
      <img
        src="/images/suflaki.jpeg"
        alt="Close-up of our signature Suflaki dish"
      />
    </figure>
  </section>

  <!-- 8) Delivery Section -->
  <section
    id="delivery-partners"
    class="delivery-partners"
    role="region"
    aria-labelledby="delivery-title"
  >
    <h2 id="delivery-title"><%- __("DELIVERY_TITLE")%></h2>
    <p>
      <%- __("DELIVERY_DESC").replace("{strong}", "<strong>").replace("{/strong}", "</strong>") %>
      
    </p>

    <div class="delivery-logos">
      <a
        href="https://wolt.com/en/alb/tirana/restaurant/zahaa-street-food"
        >      <img style="height: 120px;" src="/images/wolt-logo.png" alt="Wolt Delivery Logo" />
        </a
      >
      <a
        href="https://www.baboon.al/tirana/zahaa/menu-porosit-online"
        >      <img src="/images/baboon-logo.png" alt="Baboon Delivery Logo" />
        </a
      >
    </div>

    <div class="delivery-buttons">
      <a
        class="delivery-button wolt"
        href="https://wolt.com/en/alb/tirana/restaurant/zahaa-street-food"
        ><%- __("DELIVERY_BUTTON_WOLT")%></a
      >
      <a
        class="delivery-button baboon"
        href="https://www.baboon.al/tirana/zahaa/menu-porosit-online"
        ><%- __("DELIVERY_BUTTON_BABOON")%></a
      >
    </div>
  </section>

  <!-- 7) Location & Opening Hours (Teaser) -->
  <section
    class="location-hours"
    role="region"
    aria-labelledby="location-title"
  >
    <h2 id="location-title"><%- __("LOCATION_TITLE")%></h2>
    <p>
      <%- __("LOCATION_DESC")%>
      
    </p>

    <!-- Just the map part (no title/buttons) -->
<div class="map-container">
  <div class="map-wrapper">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d11985.146354372753!2d19.823953064767153!3d41.32438109092354!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x135031bdc7f4eee7%3A0x554d84d45831c8fb!2sZAHAA!5e0!3m2!1sen!2s!4v1740910265361!5m2!1sen!2s"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    >
    </iframe>
  </div>
</div>

    <address class="restaurant-address"><a class="restaurant-address" href="https://maps.app.goo.gl/N1q1LgsfcuP4L4Yd6">Vath Koreshi, Tiranë 1010</a></address>

    <div class="opening-hours">
      <p><strong><%- __("WEEK_DAYS")%></strong> 7AM – 11PM</p>
      <p><strong><%- __("WEEKEND_DAYS")%></strong> 7AM – 11AM</p>
    </div>

    <a class="contact-button" href="/contact"><%- __("CONTACT_BUTTON")%></a>
  </section>
</main>

<%- include('partials/footer') %>
