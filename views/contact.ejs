<%- include('partials/header') %>


<main class="contact-page" role="main">

  <!-- 1) Hero Section with text at bottom -->
  <section class="contact-hero" role="region" aria-labelledby="contact-hero-title">
    <div class="contact-hero__overlay"></div>
    <div class="contact-hero__content">
      <h1 id="contact-hero-title"><%= __('CONTACT_TITLE') %></h1>
      <p class="contact-hero__subtitle"><%= __('CONTACT_HERO_SUBTITLE') %></p>
    </div>
  </section>

  <!-- 2) Map Section -->


  <!-- 3) Send Us an Email Section -->
  <section class="contact-email-section" role="region" aria-labelledby="email-form-title">
    <h2 id="email-form-title"><%= __('CONTACT_FORM_HEADING') %></h2>
    <p class="email-info">
      <%= __('CONTACT_INFO') %> 
      <!-- clickable email link -->
      <a href="mailto:info@zahaastreetfood.al">info@zahaastreetfood.al</a>
    </p>

    <!-- Optional small form (disable x-resizing for textarea) -->
    <form class="contact-form" method="#" action="#">
      <div class="form-group">
        <label for="contactName"><%= __('CONTACT_FORM_NAME') %></label>
        <input type="text" id="contactName" name="contactName" required />
      </div>

      <div class="form-group">
        <label for="contactEmail"><%= __('CONTACT_FORM_EMAIL') %></label>
        <input type="email" id="contactEmail" name="contactEmail" required />
      </div>

      <div class="form-group">
        <label for="contactMessage"><%= __('CONTACT_FORM_MESSAGE') %></label>
        <textarea id="contactMessage" name="contactMessage" rows="5"></textarea>
      </div>

      <button type="submit" class="send-button"><%= __('CONTACT_FORM_SEND') %></button>
    </form>
  </section>

  <section class="contact-map-section" role="region" aria-labelledby="map-heading">
    <div class="map-container">
      <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d11985.146354372753!2d19.823953064767153!3d41.32438109092354!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x135031bdc7f4eee7%3A0x554d84d45831c8fb!2sZAHAA!5e0!3m2!1sen!2s!4v1740910265361!5m2!1sen!2s"
        width="600"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </div>
  </section>

</main>

<%- include('partials/footer') %>
